generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

  incomes  Income[]
  outcomes Outcome[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Category  Category[]
}

model Category {
  id                String   @id @default(cuid())
  fixedPercent      Int
  confortPercent    Int
  goalsPercent      Int
  joyPercent        Int
  investmentPercent Int
  studyPercent      Int
  userId            String
  categoryDate      DateTime @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  outcomes Outcome[]

  @@unique([userId, createdAt])
}

model Outcome {
  id       String   @id @default(cuid())
  userId   String
  amount   Decimal  @db.Decimal(10, 2)
  name     String
  category Category @relation(fields: [categoryId], references: [id])
  date     DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  categoryId String
}

model Income {
  id     String   @id @default(cuid())
  userId String
  amount Decimal  @db.Decimal(10, 2)
  name   String
  date   DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
